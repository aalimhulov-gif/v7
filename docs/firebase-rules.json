{
  "rules": {
    ".read": "auth != null",
    ".write": false,
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      },
      "Device": {
        ".read": "auth != null",
        ".write": "auth != null",
        "Desktop": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        },
        "Mobile": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        },
        "Tablet": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        }
      }
    }
  }
}