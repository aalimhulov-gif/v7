{
  "rules": {
    ".read": "auth != null",
    ".write": false,
    "families": {
      "artur-valeria-budget": {
        ".read": "auth != null",
        ".write": "auth != null",
        "budgetData": {
          ".validate": "true"
        }
      },
      "Device": {
        ".read": "auth != null",
        ".write": "auth != null",
        "Desktop": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        },
        "Mobile": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        },
        "Tablet": {
          "Operations": {
            "$operationId": {
              ".validate": "newData.hasChildren(['type', 'amount', 'person'])"
            }
          }
        }
      }
    }
  }
}